<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    
    <style name="InternalPadding" >
        <item name="android:paddingTop">15dp</item>
    </style>
    
    <style name="InternalPaddingNum" >
        <item name="android:paddingTop">0dp</item>
    </style>
    
    <style name="TitleText" >
        <item name="android:textColor">@color/darkgoldenrod</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold </item>
        <item name="android:background">@drawable/titleborder</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        </style>
    
    <style name="RegularText" >
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="InternalPaddingNum.RegularText" >
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="InternalPaddingNum.PopText" >
        <item name="android:textColor">@color/bluedark6</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="DateTimeText" >
        <item name="android:textColor">@color/ghostwhite</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold </item>
        <item name="android:background">@drawable/date_time_background</item>
    </style>

    <style name="InternalPaddingNum.TemperatureAndDescText" >
        <item name="android:textColor">@color/darkgoldenrod</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold </item>
        <item name="android:background">@color/blueBackground</item>
    </style>
    
    <style name="TemperatureTextQG" >
        <item name="android:textColor">@color/darkgoldenrod</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold </item>
        <item name="android:background">@color/blueBackground</item>
    </style>
    
</resources>
