<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:padding="1dp">

        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" 
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp" 
                android:paddingBottom="1dp">
            
	        <TextView
	            android:id="@+id/city_zip"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="City, State"
	            android:layout_alignParentLeft="true"
	            android:textSize="@dimen/activity_vertical_margin"
	            android:textStyle="italic" />
	        
            <TextView
                android:id="@+id/date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Jan 1"
                android:textSize="@dimen/activity_vertical_margin"
                android:textStyle="italic" />
        </RelativeLayout>

        <TextView
            android:id="@+id/day_of_week"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal"
            android:text="DyofWkHr"
            android:textSize="@dimen/activity_vertical_margin"
            android:textStyle="bold"
            android:typeface="monospace" />

    </LinearLayout>

 <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent">
     
    <LinearLayout
        android:id="@+id/left_side"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/center_line" >
        
            <!-- Temerature -->
            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    
            <ImageView
                android:id="@+id/temp_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/temperature"
                android:src="@drawable/temp_guage" />
    
            <TextView
                android:id="@+id/temp_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center_horizontal"
                android:inputType="none"
                android:text="50 degrees" />
    
            <TextView
                android:id="@+id/temp_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center_horizontal"
                android:inputType="none"
                android:text="35 degrees" />
    
            <TextView
                android:id="@+id/temp_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center_horizontal"
                android:inputType="none"
                android:text="60 degrees" />
    
        </LinearLayout>
    
        <!-- Wind --> 
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
    
            <ImageView
                android:id="@+id/wind_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/wind"
                android:src="@drawable/app_icon" />
    
            <TextView
                android:id="@+id/wind_sustained"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="none"
                android:text="10 knts" />
    
            <TextView
                android:id="@+id/wind_direction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:text="N" />
    
            <TextView
                android:id="@+id/wind_gust"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:text="15 knt" />
    
        </LinearLayout>
    
        <!-- Precipitation -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
    
            <ImageView
                android:id="@+id/pop_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/pop"
                android:src="@drawable/app_icon" />
    
            <TextView
                android:id="@+id/pop"
                android:layout_width="102dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:gravity="center_horizontal"
                android:inputType="none"
                android:text="10" />
    
            <TextView
                android:id="@+id/cloudAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="TextView" />
    
        </LinearLayout>
        
        <!-- Predominant Weather -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
    
            <ImageView
                android:id="@+id/weather_predominant_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/weather"
                android:src="@drawable/sun_cloud" />
    
            <TextView
                android:id="@+id/weather_predominant_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center_horizontal"
                android:inputType="none"
                android:text="heavy, medium, light" />
    
            <TextView
                android:id="@+id/weather_predominant_rain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="none" />
    
        </LinearLayout>
    
    </LinearLayout> 
    <!-- Left Side End -->
    
    
    <!-- Center -->
     <View
         android:id="@+id/center_line"
         android:layout_height="match_parent"
         android:layout_width="10dp"
         android:background="@android:color/white" 
         android:layout_centerHorizontal="true"
         android:layout_margin="5dp" />
      
     <!--     android:visibility="invisible"  -->
     
     
     <LinearLayout
	        android:id="@+id/right_side"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" 
	        android:layout_toRightOf="@id/center_line"
	        android:layout_alignParentRight="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
    
            <TextView
                android:id="@+id/LabelSailingExp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:contentDescription="@string/howIsSailingExperience"
                android:gravity="center_vertical"
                android:text="@string/howIsSailingExperience"
                android:textStyle="bold" />
    
        </LinearLayout>
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
    
            <TextView
                android:id="@+id/sailingExperience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/howIsSailingExperience" />
    
        </LinearLayout>
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
    
            <TextView
                android:id="@+id/compass_direction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />
    
            <ImageView
                android:id="@+id/compass_dir_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/wind_dir_compass_arrows" />
    
        </LinearLayout>
    
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
    
            <ImageView
                android:id="@+id/weather_predominant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:contentDescription="@string/weather"
                android:src="@drawable/sun_cloud" />
    
        </LinearLayout>
        
    </LinearLayout> 
    <!-- Right Side End -->
    
     
 </RelativeLayout>
 
</LinearLayout>