<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yanas.mobileapp.weathercast"
    android:versionCode="19"
    android:versionName="1.19" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!--
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    -->
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >
        <activity
            android:name="com.yanas.mobileapp.weathercast.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.yanas.mobileapp.weathercast.DisplayWeatherInfoActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.yanas.mobileapp.weathercast.StationListActivity"
             >
            
            <!--  android:configChanges="orientation|keyboardHidden|screenSize"  -->
            
            <!-- android:parentActivityName="com.yanas.mobileapp.weathercast.StationListActivity" -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yanas.mobileapp.weathercast" />
        </activity>
        <activity
            android:name="com.yanas.mobileapp.weathercast.DisplayWeatherInfoQuadNumbersActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.yanas.mobileapp.weathercast.StationListActivity"
             >
            
            <!--  android:configChanges="orientation|keyboardHidden|screenSize"  -->
            
            <!-- android:parentActivityName="com.yanas.mobileapp.weathercast.StationListActivity" -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yanas.mobileapp.weathercast" />
        </activity>
        <activity
            android:name="com.yanas.mobileapp.weathercast.DisplayWeatherInfoQuadGraphicsActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.yanas.mobileapp.weathercast.StationListActivity"
             >
            
            <!--  android:configChanges="orientation|keyboardHidden|screenSize"  -->
            
            <!-- android:parentActivityName="com.yanas.mobileapp.weathercast.StationListActivity" -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yanas.mobileapp.weathercast" />
        </activity>
        <activity
            android:name="com.yanas.mobileapp.weathercast.StationListActivity"
            android:label="@string/title_activity_station_list" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.yanas.mobileapp.weathercast" />
        </activity>
        <activity
            android:name="com.yanas.mobileapp.weathercast.NewStationActivity"
            android:label="@string/title_activity_new_station" >
        </activity>
    </application>

</manifest>
